@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-4">
	<h1 class="h3 mb-3 mb-md-4">Ana Sayfa</h1>

	<div class="row">
		<div class="col-md-6 col-xl-4 mb-3 mb-xl-4">
			<!-- Widget -->
			<div class="card flex-row align-items-center p-3 p-md-4">
				<div class="icon icon-lg bg-soft-primary rounded-circle mr-3">
					<i class="gd-user icon-text d-inline-block text-primary"></i>
				</div>
				<div>
					<h4 class="lh-1 mb-1">@ViewBag.worker</h4>
					<h6 class="mb-0">Çalışan Sayısı</h6>
				</div>
				<i class="gd-check icon-text d-flex text-success ml-auto"></i>
			</div>
			<!-- End Widget -->
		</div>

		<div class="col-md-6 col-xl-4 mb-3 mb-xl-4">
			<!-- Widget -->
			<div class="card flex-row align-items-center p-3 p-md-4">
				<div class="icon icon-lg bg-soft-secondary rounded-circle mr-3">
					<i class="gd-vector icon-text d-inline-block text-secondary"></i>
				</div>
				<div>
					<h4 class="lh-1 mb-1">@ViewBag.branch</h4>
					<h6 class="mb-0">Şube Sayısı</h6>
				</div>
				<i class="gd-check icon-text d-flex text-danger ml-auto"></i>
			</div>
			<!-- End Widget -->
		</div>

		<div class="col-md-12 col-xl-8 mb-6 mb-xl-8">
			<!-- Widget -->
			<div class="card flex-row align-items-center p-3 p-md-4">
				<div class="icon icon-lg bg-soft-warning rounded-circle mr-3">
					<i class="gd-reload icon-text d-inline-block text-warning"></i>
				</div>
				<div>
					<h4 class="lh-1 mb-1">@ViewBag.info</h4>
					<h6 class="mb-0">Toplam Çalışmış Kişi</h6>
				</div>
				<i class="gd-comment-alt icon-text d-flex text-success ml-auto"></i>
			</div>
			<!-- End Widget -->
		</div>

	</div>
</div>
